<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="id.uinic.diagnosacovid">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_circle"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.NoActionBar.Bridge"
        tools:ignore="AllowBackup">
        <activity android:name=".ui.aboutcovid.AboutTeamActivity" />
        <activity android:name=".ui.datacovid.DataCovidActivity" />
        <activity android:name=".ui.home.HomeActivity" />
        <activity android:name=".ui.startdiagnose.StartDiagnoseActivity" />
        <activity android:name=".ui.previousresult.PreviousResultActivity" />
        <activity android:name=".ui.result.ResultActivity" />
        <activity android:name=".ui.splashscreen.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>